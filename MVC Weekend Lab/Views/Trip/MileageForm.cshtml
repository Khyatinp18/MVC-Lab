
@{
    ViewData["Title"] = "MileageForm";
}

<h3>MileageForm</h3>

<form action="../Trip/MileageResult" method="post">
    <label for="mpg">Mileage (MPG)</label>
    <input id="mpg" type="number" name="mpg" step="0.1" placeholder="mpg" min="0" /><br />

    <label for="gallons">Gallons in tank</label>
    <input id="gallons" type="number" name="gallons" step="0.1" placeholder="gallons" min="0" max="30" /><br />

    <span style="color:blue;" >Trip Distance</span>
    <input  type="number" name="trip"  step="0.1" placeholder="miles" min="0" /><br /><br/>

    <input type="submit" value="Calculate Trip" />


</form>

